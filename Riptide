# Welcome to Sonic Pi (Riptide)
#bridge/ (twice)
use_bpm 102
use_synth :piano

#bridge
4.times do
  play :d4
  sleep 0.25
  play :e4
  sleep 0.25
  play :e4
  sleep 0.25
  play :g4
  #(stretch/tie)
  sleep 0.5
  play :c4
  sleep 0.25
  play :e4
  sleep 0.5
end

sleep 4
#(quick top notes) (3x or 4x)

4.times do
  play :c5
  sleep 0.25
  play :c5
  sleep 0.5
  play :e5
  #(stretch?)
  sleep 0.5
  play :d5
  sleep 0.75
end
#---Low---
sleep 4
live_loop :base do
  play :a2
  sleep 1
end
