  play :a4,sustain: 0.5
  sleep 0.5
  play :cs4,sustain: 0.5
  sleep 0.5
  play :b3,sustain: 0.5
  sleep 0.5
  play :gs4,sustain: 0.5
  sleep 0.5
  play :b3,sustain: 0.5
  sleep 0.5
