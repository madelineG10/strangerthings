  #M1
  play :e4,sustain: 1
  sleep 1
  play :gs4,sustain: 0.5
  sleep 0.5
  play :e4,sustain: 0.5
  sleep 0.5
  play :ds4,sustain: 1
  sleep 1
  play :gs4,sustain: 0.5
  sleep 0.5
  play :ds4,sustain: 0.5
  sleep 0.5
  #M2
  
  
  # play notes[i]
