#funtion- low notes
define :tempName do |x|
  with_fx :normaliser do
    
    play :e3, amp: x
    play :cs3, amp: x
    play :gs2, amp: x
    sleep 1
    play :r
    sleep 0.5
    play :ds3, amp: x
    play :b3, amp: x
    play :fs2, amp: x
    sleep 0.5
    play :ds3, amp: x
    play :b3, amp: x
    play :fs2, amp: x
    sleep 1
    play :r
    sleep 0.5
    play :e3, amp: x
    play :cs3, amp: x
    play :a2, amp: x
    sleep 0.5
    
    #m6
    play :e3, amp: x
    play :cs3, amp: x
    play :a2, amp: x
    sleep 1
    play :r
    sleep 0.5
    play :e3, amp: x
    play :b2, amp: x
    play :gs2, amp: x
    sleep 0.5
    play :e3, amp: x
    play :b2, amp: x
    play :gs2, amp: x
    sleep 1
    play :r
    sleep 0.5
    play :e3, amp: x
    play :cs3, amp: x
    play :gs2, amp: x
    sleep 0.5
  end
end


sample v, amp:3
sleep 1
#mesure 1&3
use_bpm 120
use_synth :piano
